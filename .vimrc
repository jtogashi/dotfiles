"execute pathogen#infect()
syntax on
filetype plugin indent on

"-------------------------------------------------------------------------------
" colorscheme
"-------------------------------------------------------------------------------
"ighlight DiffAdd    cterm=bold ctermfg=10 ctermbg=DarkGrey gui=none guifg=bg guibg=Red
"ighlight DiffDelete cterm=bold ctermfg=10 ctermbg=DarkGrey gui=none guifg=bg guibg=Red
"ighlight DiffChange cterm=bold ctermfg=10 ctermbg=DarkGrey gui=none guifg=bg guibg=Red
"ighlight DiffText   cterm=bold ctermfg=10 ctermbg=DarkRed gui=none guifg=bg guibg=Red


"-------------------------------------------------------------------------------
" option
"-------------------------------------------------------------------------------
" display
set number
set helpheight=999
set list
set listchars=tab:>.,trail:␣,extends:❯,precedes:❮

set tabstop=2
set shiftwidth=2
set expandtab

